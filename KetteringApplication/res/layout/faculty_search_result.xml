<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*" >
		    
 	<TableRow
 	    android:id="@+id/nameRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
   		android:layout_marginRight="10dp" 
        android:background="@layout/table_odd_top">
  	             
		<TextView
	        android:id="@+id/name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_span="12"
	        android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
	        android:gravity="center"
	        android:textColor="@color/tableFontColor"
	        android:textStyle="bold"
	        android:textSize="16dp" >
     	</TextView>
    </TableRow>
 	
 	<TableRow
 	   	android:id="@+id/phoneRow"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp" 
	    android:background="@color/even" >
		<TextView
		    android:text="Phone"
		    android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
            android:textColor="@color/tableFontColor"
            android:gravity="left" >
        </TextView>
   		         
		<TextView
			android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tableFontColor"
            android:layout_span="10"
            android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="14dp" >
        </TextView>
    </TableRow>
 	
 	<TableRow
 	   	android:id="@+id/roomRow"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp" 
	    android:background="@color/even" >
		<TextView
		    android:text="Room #"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="@color/tableFontColor"
            android:gravity="left" >
        </TextView>
   		         
		<TextView
			android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tableFontColor"
            android:layout_span="10"
            android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="14dp" >
        </TextView>
    </TableRow>
    
   	<TableRow
        android:id="@+id/emailRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
   		android:layout_marginRight="10dp"
   		android:layout_marginBottom="18dp" 
        android:background="@layout/table_even_bottom" >
		<TextView
            android:text="Email"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tableFontColor"
            android:gravity="left" >
        </TextView>
   		         
		<TextView
			android:id="@+id/email"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="2dp"
	        android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tableFontColor"
            android:layout_span="10"
            android:gravity="left"
            android:textSize="14dp" >
        </TextView>
    </TableRow>
 </TableLayout>