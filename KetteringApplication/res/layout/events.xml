<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_grid_edit" >
	
	<ImageView
	    android:contentDescription="@string/backCD"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="4dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_width="38dp" 
		android:layout_height="38dp"
		android:clickable="true"
		android:onClick="back"
		android:src="@drawable/arrowleft" >
	</ImageView>
	    
	<TextView
	    android:layout_marginTop="4dp"
		android:layout_width="fill_parent"
		android:layout_height="38dp"
		android:layout_alignParentTop="true"
		android:gravity="center"
		android:text="@string/eventsTitle"
		android:textSize="22sp"
		android:textStyle="bold|italic">
	</TextView>

	<ImageView
	    android:contentDescription="@string/homeCD"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="4dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_width="34dp" 
		android:layout_height="34dp"
		android:clickable="true"
		android:visibility="gone"
		android:onClick="homeScreen"
		android:src="@drawable/home" >
	</ImageView>
	<ScrollView
	  	android:id="@+id/eventsScroll"
	  	android:layout_marginTop="46dp"
	  	android:layout_alignParentTop="true"
	  	android:layout_width="fill_parent"
	   	android:layout_height="fill_parent"
	   	android:gravity="left" >
	   	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
	       	
		    <LinearLayout
				android:id="@+id/eventsContainer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" >
		    </LinearLayout>
			<Button
		    	android:id="@+id/loadMoreButton"
		    	android:layout_width="match_parent"
		    	android:background="@layout/straight_button"
		    	android:text="@string/loadMessage"
		    	android:textColor="#FFFFFF"
		    	android:onClick="loadMoreEvents"
		    	android:textSize="18sp"
		    	android:layout_height="34dp"
   				>
			</Button>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>